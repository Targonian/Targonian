package targon.Sheep.Client.Modules;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.util.math.BlockPos;
import targon.Sheep.Client.Module;

public class Nuker extends Module{

	EntityPlayer pl;
	
	public Nuker() {
		super("Nuker", 23);
	}
	
	public void onEnable() {
		setIS_TICKING(true);
		super.onEnable();
	}
	
	public void onDisable() 
	{
		setIS_TICKING(false);
		super.onDisable();
	}
	
	public void onTick() {
		pl = getMc().player;
		for(int xO = -5; xO <= 5; xO++) {
			for(int zO = -5; xO <= 5; xO++) {
				for(int yO = -5; xO <= 5; xO++) {
					getMc().player.world.destroyBlock(new BlockPos(pl.getPosition().getX()+xO, pl.getPosition().getY()+yO, pl.getPosition().getZ()+zO), false);
					getMc().getIntegratedServer().getEntityWorld().sendBlockBreakProgress(0, new BlockPos(pl.getPosition().getX()+xO, pl.getPosition().getY()+yO, pl.getPosition().getZ()+zO), 0);
				}
			}
		}
		super.onTick();
	}
	
}
