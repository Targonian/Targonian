package targon.Sheep.Client.Modules;

import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.util.math.BlockPos;
import targon.Sheep.Client.Module;

public class Nuker extends Module{

	EntityPlayer pl;
	
	public Nuker() {
		super("Nuker", 23);
	}
	
	public void onEnable() {
		setIS_TICKING(true);
		super.onEnable();
	}
	
	public void onDisable() 
	{
		setIS_TICKING(false);
		super.onDisable();
	}
	
	public void onTick() {
		pl = getMc().player;
		for(int xO = 0; xO < 1; xO++) {
			for(int zO = 0; xO < 1; xO++) {
				for(int yO = 0; xO < 1; xO++) {
					getMc().player.world.destroyBlock(new BlockPos(pl.getPosition().getX()+xO, pl.getPosition().getY()+yO, pl.getPosition().getZ()+zO), false);
				}
			}
		}
		super.onTick();
	}
	
}
